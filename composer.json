{
  "name": "juanma/jwt-auth-pro",
  "version": "1.2.1",
  "description": "Modern JWT authentication with refresh tokens for WordPress REST API - built for SPAs and mobile apps",
  "type": "wordpress-plugin",
  "keywords": [
    "wordpress",
    "jwt",
    "authentication",
    "rest-api",
    "spa",
    "mobile",
    "refresh-tokens",
    "security",
    "oauth2",
    "modern"
  ],
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Juan Manuel Garrido",
      "email": "juanma.garrido@gmail.com",
      "homepage": "https://juanma.codes",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=7.4",
    "wp-rest-auth/auth-toolkit": "@dev"
  },
  "repositories": {
    "0": {
      "type": "vcs",
      "url": "https://github.com/juanma-wp/wp-rest-auth-toolkit.git"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "wp-phpunit/wp-phpunit": "^6.0",
    "yoast/phpunit-polyfills": "^1.0",
    "wp-coding-standards/wpcs": "^3.1",
    "squizlabs/php_codesniffer": "^3.12",
    "phpstan/phpstan": "^1.10",
    "szepeviktor/phpstan-wordpress": "^1.3",
    "phpcsstandards/phpcsutils": "^1.1",
    "phpcsstandards/phpcsextra": "^1.4",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.1",
    "behat/behat": "^3.14"
  },
  "autoload": {
    "psr-4": {
      "JM_JWTAuthPro\\": "includes/"
    },
    "classmap": [
      "includes/class-jwt-auth-pro-admin-settings.php",
      "includes/class-jwt-cookie-config.php",
      "includes/class-auth-jwt.php",
      "includes/class-openapi-spec.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "": "tests/behat/bootstrap/"
    }
  },
  "scripts": {
    "lint": "phpcs -d memory_limit=512M",
    "lint-fix": "phpcbf -d memory_limit=512M",
    "phpstan": "vendor/bin/phpstan analyse --memory-limit=512M",
    "phpstan-baseline": "vendor/bin/phpstan analyse --generate-baseline --memory-limit=512M",
    "behat": "vendor/bin/behat",
    "behat-init": "vendor/bin/behat --init",
    "toolkit:dev": [
      "composer run toolkit:clean",
      "ln -s ~/PROJECTS/2025/wp-rest-auth-toolkit vendor/wp-rest-auth/auth-toolkit",
      "@composer dump-autoload"
    ],
    "toolkit:prod": [
      "composer run toolkit:clean",
      "@composer install --prefer-dist"
    ],
    "toolkit:clean": "./scripts/clean-toolkit.sh"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "platform": {
      "php": "7.4.0"
    }
  }
}
